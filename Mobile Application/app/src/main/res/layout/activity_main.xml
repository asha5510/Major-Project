<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Login "
        android:textSize="50dp"
        android:textStyle="bold">

    </TextView>


    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginText"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:padding="20dp"
        android:text="admin" />

    <Button
        android:id="@+id/Submit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submit"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:padding="20dp"
        android:text="Teacher" />

    <Button
        android:id="@+id/Submit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submit1"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:padding="20dp"
        android:text="student" />

    <TextView
        android:id="@+id/teacherRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Submit2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="Teacher_Register?"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/student_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacherRegister"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:hint="student_Register?"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>




</RelativeLayout>